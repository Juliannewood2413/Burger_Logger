<h1>Good Burger</h1>

{{!-- add images here --}}

<div class="burgers">
    <h2> Burgers ready to be eaten:</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger devoured=false}}
        {{/unless}}
        {{/each}}
    </ul>

</div>

<div class="devoured">
    <h2>Burgers that have been eaten:</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger devoured=true}}
        {{/if}}
        {{/each}}
    </ul>

</div>

<div class="addBurger">
    <h2>Order a burger:</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" name="name">
        </div>


        <button type="submit">Order</button>
    </form>
</div>